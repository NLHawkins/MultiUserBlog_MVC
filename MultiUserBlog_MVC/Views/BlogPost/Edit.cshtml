@model MultiUserBlog_MVC.Models.BlogPosts

<header class="intro-header" style="background-image: url('/img/fwwj5y1igqg-alessandro-viaro.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>Edit Post</h1>
                    <hr class="small">
                    <span class="subheading">Its almost perfect!</span>
                </div>
            </div>
        </div>
    </div>
</header>

@using (Html.BeginForm())
{


    <div class="container">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <form name="sentMessage" id="contactForm" novalidate>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            @Html.LabelFor(model => model.SampleText, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.SampleText, new { htmlAttributes = new { @class = "form-control", placeholder = "Sample Text - Optional" } })
                            @Html.ValidationMessageFor(model => model.SampleText, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @rows = "5", @class = "form-control", placeholder = "Your Post Here" } })
                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br />
                    <div class="row control-group">
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Public)
                                @Html.ValidationMessageFor(model => model.Public, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Public, htmlAttributes: new { @class = "control-label col-md-2" })
                            </div>
                        </div>
                    </div>

                    <br>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </form>
                <p>Photograph by <a href="https://www.flickr.com/photos/nasacommons/">Alessandro Viaro</a>.</p>
            </div>

        </div>
        
    </div>
}
